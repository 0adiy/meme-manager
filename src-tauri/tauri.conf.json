{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "meme-manager",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      },
      "path": {
        "all": false
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      }
    },
    "windows": [
      {
        "title": "Meme Manager",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "default-src": "self",
        "img-src": "'self' https://* asset: https://asset.localhost",
        "media-src": "'self' https://* asset: https://asset.localhost",
        "style-src-elem": "'self' 'unsafe-inline'"
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.bisskut.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
